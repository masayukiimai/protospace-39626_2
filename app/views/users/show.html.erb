<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さんの情報" %> <!-- @user.name でユーザーの名前を表示 -->
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
          <tr>
            <th class="table__col1">所属</th>
            <td class="table__col2"><%= @user.occupation %></td> <!-- モデルの正しい属性名を使用 -->
          </tr>
          <tr>
            <th class="table__col1">役職</th>
            <td class="table__col2"><%= @user.position %></td>
          </tr>
        </tbody>
      </table>
    </div>
    
    <div class="user__prototypes">
      <h2 class="page-heading">
        <%= "#{@user.name}さんのプロトタイプ" %> <!-- @user.name でユーザーの名前を表示 -->
      </h2>
      <div class="user__card">
        <%= render partial: 'prototypes/prototype', collection: @user.prototypes %>
      </div>
    </div>
  </div>

  <!-- ここにフッダーを配置 -->
  <div class="footer">
    <!-- フッダーのコンテンツをここに記述 -->
  </div>
</div>