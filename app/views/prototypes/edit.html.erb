<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">プロトタイプ編集</h2>
      <%= render partial: "form", locals: { prototype: @prototype } %>
    </div>
  </div>
</div>
<%= form_with(model: @prototype, url: prototype_path(@prototype), method: :patch, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  
  <div class="field">
    <%= form.label :catch_copy %>
    <%= form.text_field :catch_copy %>
  </div>
  <div class="field">
    <%= form.label :concept, "コンセプト" %>
    <%= form.text_field :concept %>
  </div>
  <div class="field">
    <%= form.label :image, "プロトタイプの画像"%><br>
    <%= form.file_field :image %>
  </div>
  
  
  <div class="actions">
    <%= form.submit '更新' %>
  </div>
<% end %>
<% if @prototype.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@prototype.errors.count, "error") %> prohibited this prototype from being saved:</h2>
    <ul>
      <% @prototype.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

